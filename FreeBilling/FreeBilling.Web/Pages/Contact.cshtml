@page
@model ContactModel
@{
}
<h1>@Model.Title</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" style="color: red;"></div>
    <label for="Name">Name</label>
    <br />
    <input for="Name" />
    @* <span asp-validation-for="Contact.Name"></span> *@
    <br />
    <label for="Email">Email</label>
    <br />
    <input for="Email" />
    @* <span asp-validation-for="Contact.Email"></span> *@
    <br />
    <label for="Subject">Subject</label>
    <br />
    <select for="Subject">
        <option>Work</option>
        <option>Personal</option>
        <option>Proposal</option>
    </select>
    @* <span asp-validation-for="Contact.Subject"></span> *@
    <br />
    <label for="Contact.Body">Message</label>
    <br />
    <textarea rows="4" for="Contact.Body"></textarea>
    @* <span asp-validation-for="Contact.Body"></span> *@
    <br />
    <button type="submit">Send</button>
    <br />
    <div>@Model.Message</div>
</form>